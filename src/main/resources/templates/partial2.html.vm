<div class="row-fluid" style="margin-top:30px">
    <div class="span4 offset4">
        <span class="span5">Found {{results.hits.total}} Results</span>
        <span class="span5 offset2">
            <a href="#/search">New Search <i class="icon-search"></i></a>
        </span>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Message</th>
                </tr>
            </thead>
            <tbody>
                <tr ng-repeat="doc in results.hits.hits">
                    <td>{{doc._source.user}}</td>
                    <td>{{doc._source.message}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>